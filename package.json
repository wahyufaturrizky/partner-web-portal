{
  "name": "partner-web-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    
    "epc-install": "yarn",
    "epc-start": "next start",
    "epc-dev": "next dev",
    "epc-build": "next build",

    "install:epc": "lerna run --parallel epc-install",
    "start:epc": "lerna run --parallel epc-start",
    "dev:epc": "lerna run --parallel epc-dev",
    "build:epc": "lerna run --parallel epc-build",

    "lint": "npm-run-all -p lint:*",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint --ext .js,.ts,.tsx .",
    "lint:prettier": "prettier --check .",
    "fix": "prettier --write . && eslint --fix --ext .js,.ts,.tsx .",
    "test": "jest",
    "update:pink-lava-ui": "rm -rf ./node_modules/pink-lava-ui && cp -r ../pink-lava-design/dist ./node_modules/pink-lava-ui"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@dnd-kit/core": "^6.0.5",
    "@dnd-kit/modifiers": "^6.0.0",
    "@dnd-kit/sortable": "^7.0.1",
    "@dnd-kit/utilities": "^3.2.0",
    "@hookform/devtools": "^4.2.2",
    "@hookform/resolvers": "^2.8.8",
    "@lucasmogari/react-pagination": "^1.1.3",
    "@svgr/webpack": "^6.2.1",
    "D": "^1.0.0",
    "autoprefixer": "^10.4.2",
    "axios": "^0.26.1",
    "exceljs": "^4.3.0",
    "file-saver": "^2.0.5",
    "immer": "^9.0.12",
    "isomorphic-unfetch": "^3.1.0",
    "lerna": "^6.1.0",
    "lodash.camelcase": "^4.3.0",
    "lodash.snakecase": "^4.1.1",
    "moment": "^2.29.4",
    "next": "12.1.0",
    "pink-lava-ui": "file:./modules/pink-lava-design/dist",
    "postcss": "^8.4.8",
    "qs": "^6.10.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.28.0",
    "react-hook-form-persist": "^3.0.0",
    "react-hot-toast": "^2.2.0",
    "react-query": "^3.34.16",
    "styled-components": "^5.3.3",
    "swr": "^1.2.2",
    "xlsx": "^0.18.5",
    "yarn": "^1.22.18",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/exceljs": "^1.3.0",
    "@types/node": "^17.0.21",
    "@types/react": "17.0.40",
    "@types/styled-components": "^5.1.24",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@vercel/node": "^1.13.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sonarjs": "^0.12.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "msw": "^0.39.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "react-otp-input": "^2.4.0",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts,.tsx --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged && yarn test"
    }
  }
